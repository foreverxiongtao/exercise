<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/tv_notify_previouse"
        android:layout_width="wrap_content"

        android:layout_height="match_parent"
        android:text="@string/str_notify_previouse" />



    <TextView
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/tv_notify_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/str_notify_start" />



    <TextView
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_notify_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/str_notify_next" />


</RelativeLayout>